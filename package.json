{
  "name": "@mattwca/css-module-snapshots",
  "version": "1.0.1",
  "description": "Adds support for testing when using CSS Modules in Jest, including snapshots and style matching.",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/index.js"
    },
    "./transformer": {
      "require": "./dist/transformer/cssModuleTransformer.js"
    }
  },
  "files": [
    "dist",
    "src",
    "types",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:main",
    "build:main": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --module esnext --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js,.cjs"
  },
  "keywords": [
    "jest",
    "css-modules",
    "snapshot",
    "testing",
    "transformer",
    "serializer",
    "matcher"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adobe/css-tools": "^4.4.4",
    "cross-spawn": "^7.0.3",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattwca/css-module-snapshots.git"
  }
}
