{
  "name": "css-modules-snapshots",
  "version": "1.0.0",
  "description": "Jest plugin for CSS Modules snapshot testing with transformer, serializer, and custom matchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./transformer": {
      "require": "./dist/transformer/cssModuleTransformer.js"
    },
    "./serializer": {
      "require": "./dist/serializer/cssModuleSnapshotSerializer.js"
    },
    "./matchers": {
      "require": "./dist/matchers/index.js",
      "import": "./dist/matchers/index.mjs",
      "types": "./dist/matchers/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:main && npm run build:types",
    "build:main": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --module esnext --outDir dist --declarationDir dist/types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js,.cjs"
  },
  "keywords": [
    "jest",
    "css-modules",
    "snapshot",
    "testing",
    "transformer",
    "serializer",
    "matcher"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattwca/css-module-snapshots.git"
  }
}
